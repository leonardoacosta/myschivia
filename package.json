{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @tribal-cities/db push",
    "db:studio": "turbo -F @tribal-cities/db studio",
    "admin": "turbo -F @tribal-cities/admin dev",
    "dev": "turbo watch dev --continue",
    "dev:ios": "turbo watch dev:ios --continue",
    "dev:next": "turbo watch dev -F @acme/nextjs",
    "expo": "turbo watch expo:ios",
    "format": "turbo run format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@tribal-cities/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.6",
    "prettier": "catalog:",
    "turbo": "^2.0.6",
    "typescript": "catalog:"
  },
  "prettier": "@tribal-cities/prettier-config"
}